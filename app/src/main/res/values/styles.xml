<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DatePickerDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorAccent">@color/purple_700</item>
        <item name="android:colorControlActivated">@color/purple_700</item>
    </style>

    <style name="book_name_title_txt_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/title_txt_color</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="book_name_value_txt_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title_txt_color</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
    </style>

    <style name="title_txt_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/title_txt_color</item>
        <item name="android:fontFamily">@font/gobold_bold</item>
    </style>

    <style name="title_header_txt_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/edit_book_name_text_color</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
    </style>

    <style name="submit_btn_txt_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
    </style>

</resources>